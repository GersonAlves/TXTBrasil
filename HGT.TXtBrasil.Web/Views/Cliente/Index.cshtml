@model HGT.TXtBrasil.Web.Models.Cliente.ClienteModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro Cliente</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Cadastro Cliente</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome)
            </li>
            <li>
                @Html.LabelFor(m => m.Cnpj)
                @Html.TextBoxFor(m => m.Cnpj)
            </li>
            <li>
                @Html.LabelFor(m => m.Endereco)
                @Html.TextBoxFor(m => m.Endereco)
            </li>
        </ol>
        <input type="submit" value="Salvar" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

